$phpFiles = array();
$inserted = array();

$AC="";
if(isset($_GET['AC'])){ $AC=trim($_GET['AC']); $AC=str_replace(' ','',$AC); }
$SHOW="0";
if(isset($_GET['SHOW'])){ $SHOW=trim($_GET['SHOW']); $SHOW=str_replace(' ','',$SHOW); }


if ($SHOW=="1") {
    echo date('Y-m-d H:i:s')."<br> ";
    echo preg_quote($insertCode, '/') ."<br><br>";
}

