<div class="container">
    <div class="row">
        <!-- Div to hide all divs -->
        <div class="popover-content">
            <!-- Button #4 Popover Card -->
            <div id="popover-card" class="">
                <div class="card" style="width: 18rem;">
                   <!-- <div class="card-header">
                        Share
                    </div> -->
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><a class="share-item" style="cursor: pointer;" id="share-fb">Facebook</a></li>
                        <li class="list-group-item"><a class="share-item" style="cursor: pointer;" id="share-tw">Twitter</a> </li>
                        <li class="list-group-item"><a class="share-item" style="cursor: pointer;" id="share-link">Link</a></li>
