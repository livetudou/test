<script>
    // var social_arr = '';
    // var social_json = JSON.parse(social_arr);
    let click_time2 = 0;
    function OpenPopup2(type, social_json2) {
	let width_popup = 450;
    	let height_popup = 626;
    	let check = 0;

    	let re_time = 0;
        u = location.href;
        t = document.title;
        let left = (screen.width) ? (screen.width - width_popup) / 2 : 100;
        let top = (screen.height) ? (screen.height - height_popup) / 2 : 100;
        let name = type;
        let properties = "menubar=no,toolbar=no,status=0,resizable=yes,scrollbars=yes";
        properties = properties + ",width=" + width_popup + ",height=" + height_popup + ",top=" + top + ",left=" + left + ";";
        
        let url = social_json2[type]['url_share'];
        name = social_json2[type]['sharer'];
        delete social_json2[type]['url_share'];
        delete social_json2[type]['sharer'];
        let param = ''

        switch (type) {
            case 'f':
                var val_arr = new Array();
                for (var key in social_json2[type]) {
                    val = social_json2[type][key];
                    val_arr.push(key + '=' + val);
                }
                param = val_arr.join('&');
                break;
            case 't':
                var val_arr = new Array();
                for (var key in social_json2[type]) {
                    val = social_json2[type][key];
                    if (key == 'url') {
                        val = encodeURI(val);
                    } else if (key == 'text') {
                        val = decodeURI(val);
                    }
                    val_arr.push(key + '=' + val);
                }
                param = val_arr.join('&');
                break;
            case 'g':
                var val_arr = new Array();
                for (var key in social_json2[type]) {
                    val = social_json2[type][key];
                    val_arr.push(key + '=' + val);
                }
                param = val_arr.join('&');
                break;
            case 'l':
                var val_arr = new Array();
                for (var key in social_json2[type]) {
                    val = social_json2[type][key];
                    if (key == 'url') {
                        val = encodeURI(val);
                    } else if (key == 'text') {
                        val = decodeURI(val);
                    }
                    val_arr.push(val);
                }
                param = val_arr.join('%0d%0a');
                break;
        }
        social_json2[type]['url_share'] = url;
        social_json2[type]['sharer'] = name;
        if (type != 'l') {
            window.open(url + param, name, properties);
        } else if (type == 'l') {
            click_time2 = new Date().getTime();
            window.top.location.href = url + param;
            myFunc2();
            return false;
        }
        return false
    }

    function myFunc2() {
        setTimeout(function () {
            re_time = new Date().getTime();
            var check = re_time - click_time2;
            if (check < 3020) {
                alert('ไม่พบ Application LINE');
            }
        }, 3000);
    }

    function copyTextToClipboard2(text) {
        var textArea = document.createElement("textarea");

        // Place in top-left corner of screen regardless of scroll position.
        textArea.style.position = 'fixed';
        textArea.style.top = 0;
        textArea.style.left = 0;

        // Ensure it has a small width and height. Setting to 1px / 1em
        // doesn't work as this gives a negative w/h on some browsers.
        textArea.style.width = '2em';
        textArea.style.height = '2em';

        // We don't need padding, reducing the size if it does flash render.
        textArea.style.padding = 0;

        // Clean up any borders.
        textArea.style.border = 'none';
        textArea.style.outline = 'none';
        textArea.style.boxShadow = 'none';

        // Avoid flash of white box if rendered for any reason.
        textArea.style.background = 'transparent';

        textArea.value = text;

        document.body.appendChild(textArea);
        textArea.focus();
        textArea.select();

        try {
            var successful = document.execCommand('copy');
            var msg = successful ? 'successful' : 'unsuccessful';
            alert('Copying text command was ' + msg);
        } catch (err) {
            alert('Oops, unable to copy');
        }

        document.body.removeChild(textArea);
    }


    $(function () {
        // set popover
        let share_url = ''
        let share_title = ''
        let share_entry = ''
        let popopt2 = {html: true, selector: ".pover-card", trigger: 'focus'}

        $('body').popover({
            ...popopt2,
            content: function (e) {
                share_url = $(this).attr('data-url')
                share_title = $(this).attr('data-title-share')
                share_entry = $(this).attr('data-entry-id')
                var id = $(this).attr('id');
                if(!share_url.includes("http")) {
                    share_url = "https:" + share_url;
                }
                return $('#po' + "pover-card").html();
            }
        }).delegate('#share-fb', 'click', function (e) {
            const sharer = {
                f: {
                    sharer: 'sharer',
                    u:  share_url,
                    url_share: "http://www.facebook.com/sharer.php?"
                },
                t: {
                    sharer: '',
                    text: share_title,
                    url:  share_url,
                    url_share: "https://twitter.com/share?",
                    via: "bbtvchannel7"
                }
            }
            OpenPopup2('f', sharer)
        }).delegate('#share-tw', 'click', function (e) {
            const sharer = {
                f: {
                    sharer: 'sharer',
                    u:  share_url,
                    url_share: "http://www.facebook.com/sharer.php?"
                },
                t: {
                    sharer: '',
                    text: share_title,
                    url:  share_url,
                    url_share: "https://twitter.com/share?",
                    via: "bbtvchannel7"
                }
            }
            OpenPopup2('t', sharer)
        }).delegate('#share-link', 'click', function (e) {
            let link = 'https://s.ch7.com/' + share_entry
            copyTextToClipboard2(link)
        })

    })

</script>
    </div>
</section>

