<script>
	var isClose = false;
	var isHide = false;
	var isPlaying = false;
	var lastScrollY = 0;
	var scheduledAnimationFrame;
	$(document).ready(function () {
		player.on("playing", () => {
			isPlaying = true;
		});

		// set player responsive to false
		player.responsive(true);
    player.fluid(false);
    player.aspectRatio('16:9');
		// set lastprogram text
		$("#last-program").text(lastProgram);

		function onScroll(evt) {
			// Prevent multiple rAF callbacks.
			if (scheduledAnimationFrame) {return;}
			scheduledAnimationFrame = true;
			requestAnimationFrame(miniplayer);
		}
		setTimeout(() => {
			window.onscroll = onScroll;
		}, 3000);

		var fixed_mini_player = document.getElementById("myPlayer");
		var mini_player =
			fixed_mini_player.offsetTop + fixed_mini_player.offsetHeight;
		var $content = $("#myBg");

		function miniplayer() {
			if (window.pageYOffset > mini_player) {
        $content.height(mini_player);        
        
				if (!isClose) {
					$(".fixed-mini-player").addClass("mini-player show animation");
				}

				if (!isHide && isPlaying) {
					window.toggleControl("hide");
					isHide = true;
				}
			} else {
				$(".fixed-mini-player").removeClass("mini-player show animation");
				if (isHide && isPlaying) {
					window.toggleControl("show");
					isHide = false;
				}
			}
			scheduledAnimationFrame = false;
		}

		// close function
		$("#close").click(function () {
			isClose = true;
			$(".fixed-mini-player").removeClass("mini-player show animation");
		});

		// expand function
		$("#expand").click(function () {player.requestFullscreen();});

		//jQuery for page scrolling feature - requires jQuery Easing plugin
		// $(function () {
		// 	$("a.page-scroll").bind("click", function (event) {
		// 		var $anchor = $(this);
		// 		$("html, body")
		// 			.stop()
		// 			.animate(
		// 				{
		// 					scrollTop: $($anchor.attr("href")).offset().top,
		// 				},
		// 				300,
		// 				"easeInOutExpo"
		// 			);
		// 		event.preventDefault();
		// 	});
		// });
	});

	let t5 = setInterval(() => {
		if (bplayer && bplayer.contextmenuUI) {
			if (bplayer.contextmenuUI.content.length != 0) {
				bplayer.contextmenuUI({ content: [] });
			} else {clearInterval(t5);}
		}
	}, 1000);
</script>


