    <script type="text/javascript">
      var bplayer = window.bplayer = videojs('bplayer');
            if (typeof detectmob == 'undefined') {
        detectmob = function() {
          const toMatch = [
        /Android/i,
        /webOS/i,
        /iPhone/i,
        /iPad/i,
        /iPod/i,
        /BlackBerry/i,
        /Windows Phone/i
    ];

    return toMatch.some((toMatchItem) => {
        return navigator.userAgent.match(toMatchItem);
    });
        };
      }
      var isAdsPlaying = false;

      if (detectmob()) {bplayer.autoplay(false);} else {
              }
      bplayer.on('touchstart', function() {
        if (isAdsPlaying) {
          setTimeout(function(){$('#'+bplayer.id_).addClass('not-hover')},200)
        }
      });
      bplayer.on('playing', function(){
        isAdsPlaying = false;
      });

      bplayer.on('adstart', function(){
        isAdsPlaying = true;
        $('#'+bplayer.id_).addClass('not-hover')
      });


      bplayer.on('ads-ad-ended', function(){
        console.log('ads-ad-ended');
        // $(".big-center-button-custom").show()
        /*if("true" == "true") {bplayer} */  
      });
      bplayer.on('ads-ad-skipped', function(){
        // bplayer.play();

        console.log('ads-ad-skipped');
        // $(".big-center-button-custom").show()
      });
      
      
    </script>
  </div>
