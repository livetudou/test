    $(document).ready(function (e) {
	
        $("#linkDisplayModal").click(function (e) {
	  
            $("#signinSelectModal").modal('hide');
            $("#displayModal").modal();
        });

        $("#btnSignInEmailType").click(function (e) {
	  
            $("#signinSelectModal").modal('hide');
            $("#signInEmailModal").modal();
        });

        $("#btnSigninTypeTel").click(function (e) {
	    
            $("#signinSelectModal").modal('hide');
            $("#signInPhoneModal").modal();
        });

    })



