<script>
    document.addEventListener("DOMContentLoaded", () => {
        document.querySelector("#header-sport-news").addEventListener("click", () => {
            dataLayer.push({
                'event': 'javascript-event',
                'gtm.element.dataset.category': 'sportsNews',
                'gtm.element.dataset.action': 'click_text',
                'gtm.element.dataset.label': 'header_link'
