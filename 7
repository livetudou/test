    document.addEventListener("DOMContentLoaded", () => {
        document.querySelector("#header-drama-onair")
            .addEventListener("click", () => {
                dataLayer.push({
                    'event': 'javascript-event',
                    'gtm.element.dataset.category': 'dramaOnair',
                    'gtm.element.dataset.action': 'click_text',
                    'gtm.element.dataset.label': 'header_link'
                })
        })

        document.querySelector("#generic-1 .owl-nav")
            .addEventListener("click", () => {
                dataLayer.push({
                    'event': 'javascript-event',
                    'gtm.element.dataset.category': 'dramaOnair',
                    'gtm.element.dataset.action': 'click_btn',
                    'gtm.element.dataset.label': 'arrow_btn'
                })
        })

    })

</script>

