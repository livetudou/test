<script>
	$('#btn-cookie').click(function() {
		sessionStorage.setItem('acceptCookie', 'yes');
		$('.cookiebar').addClass('hidebar');
	});

	if (sessionStorage.getItem('acceptCookie') == 'yes') {
		$('.cookiebar').addClass('hidebar');
	} else {
		$('.cookiebar').removeClass('hidebar');
	}
</script>
